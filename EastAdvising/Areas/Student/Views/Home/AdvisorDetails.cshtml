@model List<EastAdvising.Models.Advisor>
<br /> <br />
<div class="row">
    @foreach (var ad in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue;">@ad.FullName</label>
                    </h4>
                </div>


                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">

                        <a asp-action="AvailabilityDetails" asp-controller="Home" class="btn btn-info" asp-route-id="@ad.AdvisorId">View Appointments</a>
                    </div>
                </div>

            </div>
        </div>

    }
    
</div>

<a asp-action="CollegeDetails" class="btn btn-success">Back to Departments</a>

