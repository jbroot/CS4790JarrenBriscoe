@model List<EastAdvising.Models.Major>
<br /> <br />
<div class="row">
    @foreach (var maj in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue;">@maj.MajorName</label>
                    </h4>
                </div>


                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">

                        <a asp-action="AdvisorDetails" asp-controller="Home" class="btn btn-info" asp-route-id="@maj.MajorId"> View Advisors</a>
                    </div>
                </div>

            </div>
        </div>

    }
</div>

<a asp-action="CollegeDetails" class="btn btn-success">Back to Departments</a>