@model EastAdvising.Models.College

<div class="container card_box">
    
        @foreach (var dep in @Model.Departments)
        {
            <div class="card my_card">
                <div class="card-header my_card_header">
                    <label><i class="fas fa-building"></i> @dep.DepartmentName </label>
                </div>
                <div class="card-body my_card_body">
                    <img src="~/images/weber-state-university-squarelogo_emblem.png" class="img-thumbnail img-fluid card_image" />
                </div>

                <div class="card-footer my_card_footer">
                    <a asp-action="MajorDetails" asp-controller="Home" class="btn btn-primary my_button" 
                    asp-route-id="@dep.DepartmentId"><i class="far fa-eye"></i> View Major</a>

                </div>
            </div>
        }
         
</div>
<div class="btn-group">
    <a asp-action="Index" asp-controller="Home" class="btn btn-success my_button">
        <i class="fas fa-arrow-alt-circle-left fa-lg"></i>
             Back
    </a>
</div>


