@model List<EastAdvising.Models.College>
<br /> <br />
<div class="row">
    @foreach (var colleges in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue;">@colleges.CollegeName</label>
                    </h4>
                </div>

               
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        
                        <a asp-action="CollegeDetails" asp-controller="Home" class="btn btn-info" asp-route-id="@colleges.CollegeId"> View College Departments</a>
                    </div>
                </div>

            </div>
        </div>

    }
</div>
<a asp-action="Cancel" asp-controller="Home" class="btn btn-info">Cancel Appointment</a>
